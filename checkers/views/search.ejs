<%- include('templates/header') -%>


    <div class="container">
        <div class="row searchingrow justify-content-between">
            <div class="col col-md-4">
                <% if(searching){ %>
                    <h1>Searching for game</h1>
                    <div class="sk-wandering-cubes">
                        <div class="sk-cube sk-cube1"></div>
                        <div class="sk-cube sk-cube2"></div>
                    </div>

                    <div>
                        <form action="/stop" method="POST">
                            <button type="submit" class="btn btn-light">Stop searching</button>
                        </form>
                    </div>

                    <% } else { %>
                        <div>
                            <form action="/find" method="POST">
                                <div>
                                    <label for="select_dropdown">Turn duration</label>
                                    <select value="" id="select_dropdown" class="select_dropdown" name="seconds">
                                        <option value="5"  id="">5</option>
                                        <option value="10" id="">10</option>
                                        <option value="15" id="">15</option>
                                        <option value="20" id="">20</option>
                                        <option value="60" id="">60</option>
                                    </select>
                                </div>
                                <div><button type="submit" class="btn btn-default">Search</button></div>

                            </form>
                        </div>
                        <% } %>

            </div>

            <div class="col-md-4">
                <div class="list-group">
                    <h2>Searching games</h2>

                    <div id="gameboard">

                    </div>

                </div>
            </div>
        </div>
    </div>


    <%- include('templates/footer') -%>
        <script src="/gameSearch.js"></script>
        </footer>
        </body>